{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./docs/assets/javascripts",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021",
      "es2022",
      "es2023",
      "ESNext",
      "DOM"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "buildOptions": {
    "outDir": "./docs/assets/javascripts",
    "rootDir": "./src"
  }
}
