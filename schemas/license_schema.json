{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "License Schema",
  "type": "object",
  "properties": {
    "plain_name": { "type": "string" },
    "spdx_id": { "type": "string" },
    "original_name": { "type": "string" },
    "original_url": { "type": "string", "format": "uri" },
    "original_organization": { "type": "string" },
    "original_version": { "type": ["string", "null"] },
    "category": { "type": "string" },
    "license_description": { "type": "string" },
    "how": { "type": "string" },
    "note": { "type": "string" },
    "permissions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "conditions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "limitations": {
      "type": "array",
      "items": { "type": "string" }
    },
    "intro": { "type": "string" },
    "reader_license_text": { "type": "string" },
    "official_license_text": { "type": "string" },
    "link_in_original": { "type": "boolean" },
    "reference_links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "reference_tag": { "type": "string" },
          "link_url": { "type": "string", "format": "uri" },
          "link_title": { "type": "string" }
        },
        "required": ["reference_tag", "link_url"]
      }
    }
  },
  "required": [
    "plain_name",
    "spdx_id",
    "original_name",
    "original_url",
    "original_organization",
    "original_version",
    "category",
    "license_description",
    "how",
    "note",
    "permissions",
    "conditions",
    "limitations",
    "intro",
    "reader_license_text",
    "official_license_text",
    "link_in_original"
  ]
}
