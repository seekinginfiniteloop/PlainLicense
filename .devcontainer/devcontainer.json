// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
  "name": "Ubuntu",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:noble",
  "features": {
    "ghcr.io/shyim/devcontainers-features/bun:0": {},
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/node-asdf:0": {},
    "ghcr.io/devcontainers-extra/features/ruff:1": {},
    "ghcr.io/devcontainers-extra/features/ts-node:1": {},
    "ghcr.io/devcontainers-extra/features/tsx:1": {},
    "ghcr.io/wxw-matt/devcontainer-features/command_runner:0": {
      "script1": "avoid_password_service_ssh_start#https://gist.github.com/wxw-matt/186afd98891bd2c26adfb5b3045d236c/raw"
    }
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [8000],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "sudo apt-get update && sudo apt upgrade -y && sudo apt -y install libcairo2-dev pkg-config python3-dev && /bin/bash -c 'export UV_LINK_MODE=copy' && uv sync --all-extras -q && bun install --no-summary --silent && uv tool install ipython -q && /bin/bash -c 'source .venv/bin/activate' && git submodule update && uv tool update-shell",
  "customizations": {
    "vscode": {
      "extensions": [
        "Alexey-Strakh.stackoverflow-search",
        "almenon.birdseye-vscode",
        "anteprimorac.html-end-tag-labels",
        "antfu.iconify",
        "charliermarsh.ruff",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "cmstead.js-codeformer",
        "cmstead.jsrefactor",
        "DavidAnson.vscode-markdownlint",
        "dbaeumer.vscode-eslint",
        "donjayamanne.python-environment-manager",
        "donjayamanne.python-extension-pack",
        "ecmel.vscode-html-css",
        "evgeniypeshkov.syntax-highlighter",
        "fill-labs.dependi",
        "firefox-devtools.vscode-firefox-debug",
        "formulahendry.auto-rename-tag",
        "hbenl.vscode-test-explorer",
        "jock.svg",
        "kakumei.ts-debug",
        "kamikillerto.vscode-linthtml",
        "leizongmin.node-module-intellisense",
        "littlefoxteam.vscode-python-test-adapter",
        "mads-hartmann.bash-ide-vscode",
        "minherz.copyright-inserter",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.test-adapter-converter",
        "Mukundan.python-docs",
        "njpwerner.autodocstring",
        "njqdev.vscode-python-typehint",
        "oderwat.indent-rainbow",
        "pamaron.pytest-runner",
        "PascalReitermann93.vscode-yaml-sort",
        "qcz.text-power-tools",
        "redhat.vscode-yaml",
        "rogalmic.bash-debug",
        "shakram02.bash-beautify",
        "sourcery.sourcery",
        "stylelint.vscode-stylelint",
        "tamasfe.even-better-toml",
        "tekumara.typos-vscode",
        "timonwong.shellcheck",
        "Tock.vscode-css-custom-properties",
        "travis71i.clean-css-vscode",
        "Tyriar.sort-lines",
        "VisualStudioExptTeam.intellicode-api-usage-examples",
        "VisualStudioExptTeam.vscodeintellicode",
        "WallabyJs.quokka-vscode",
        "wholroyd.jinja",
        "wix.vscode-import-cost",
        "wmontalvo.vsc-jsonsnippets",
        "YoavBls.pretty-ts-errors",
        "yzhang.markdown-all-in-one",
        "ZainChen.json",
        "Zignd.html-css-class-completion"
      ]
    }
  }
}
